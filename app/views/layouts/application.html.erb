<!DOCTYPE html>
<html>
<head>
  <title> Harsha's Online Shop </title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body id="store">
  <div id="banner">
	<%= image_tag("logo.png") %>
	<%= @page_title || "Harsha's Online Shop" %>
  </div>

  <div id="columns">
    <div id="side">
	<div id="cart">
	<% if @cart %>
	<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
	<%= render @cart %>
	<% end %>
	<% end %>
	</div>
	<br />
	<a href="http://www.books.google.co.in">Search Web</a><br />
	<a href="http://www..../news">News</a><br />
	<a href="http://www..../faq">Questions</a><br />
	<a href="http://www..../contact">Contact</a><br />
    </div>
    <div id="main">
	<%= yield %>
    </div>
  </div>
</body>
</html>

